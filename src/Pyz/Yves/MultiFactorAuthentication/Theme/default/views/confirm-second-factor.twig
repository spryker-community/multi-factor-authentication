{% extends template('page-layout-main') %}

{% define data = {
    form: _view.confirmSecondFactorForm,
} %}

{% block title %}
    <h3 class="page-info__title">{{ 'Confirm with OTP you received via email' | trans }}</h3>
{% endblock %}

{% block content %}
    <section class="section section--last">
        <div class="grid">
            <div class="col col--sm-12 col--lg-6 spacing-x spacing-x--inner spacing-x--big">
                {% include molecule('form') with {
                    class: 'box',
                    data: {
                        title: 'Confirm with OTP you received via email' | trans,
                        form: data.form,
                        shouldRequireMessage: true,
                        options: {
                        },
                        submit: {
                            enable: true,
                            text: 'Submit' | trans,
                        },
                    },
                    qa: 'otp-form'
                } only %}
            </div>


        </div>
    </section>
{% endblock %}
